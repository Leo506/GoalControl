<Window x:Class="ToDoList.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="215" Width="197">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" x:Name="TaskInput" Height="50" Width="150" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <WrapPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Добавить задачу" Margin="5" Click="AddTaskClick"/>
            <Button Content="Отмена" Margin="5" Click="CancelClick"/>
        </WrapPanel>
    </Grid>
</Window>
